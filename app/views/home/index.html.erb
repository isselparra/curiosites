<h1><%= @name %></h1>
<p><%= @surname_1 %></p>
<p><%= @surname_2 %></p>
<p><%= @description %></p>
<p><%= @comment %></p>

<h2>Ses Curiosit√©s</h2>
<section id="curiosities">
    <div class="container">
        <% @my_curiosities.each_with_index do |curiosity, index| %>
            <% if index == 0 || index == 4 %>
                <div class="row">
            <% end %>
                <div class="col-sm-3">
                    <div class="item">
                        <a href="<%= curiosity.image_url %>" target="_blank">
                            <img class="picture" title="<%= curiosity.image_text %>" alt="<%= curiosity.image_text %>" src="<%= curiosity.image_url %>" />
                        </a>
                    </div>
                    <h3><%= curiosity.name %></h3>
                    <p><%= curiosity.description %></p>
                    <p><%= curiosity.category %></p>
                    <p>
                        <%= link_to 'Voir les details', curiosity_path(curiosity) %>
                    </p>
                    <p>
                        <%= link_to curiosity_path(curiosity), method: :delete, data: { confirm: "Are you sure?" } do %>
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        <% end %>
                    </p>
                </div> <!-- end .col-sm-3 -->
            <% if index == 3 || index == 7 %>
                </div> <!-- end .row -->
            <% end %> 
        <% end %> <!-- end end_with_index -->
    </div> <!-- end .container -->
</section>